<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- Rich reader view used for displaying EPUB/TXT/PDF/Image content. -->
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="transparent.controller.ReaderController">
    <top>
        <VBox spacing="6" padding="10">
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button fx:id="prevButton" text="Previous" />
                <Button fx:id="nextButton" text="Next" />
                <Label fx:id="pageLabel" text="Page 1 / 1" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="favouriteButton" text="Add to favourites" />
                <Button fx:id="openExternalButton" text="Open externally" />
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fx:id="contentScroll" fitToHeight="true" fitToWidth="true" pannable="true">
            <content>
                <StackPane fx:id="contentHolder" padding="20" />
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" padding="10">
            <Label fx:id="statusLabel" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="closeButton" text="Close" />
        </HBox>
    </bottom>
</BorderPane>
