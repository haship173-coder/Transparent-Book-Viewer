<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- Login view: prompts for a username.  The LoginController handles the
     transition to the main view. -->
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="transparent.controller.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <TextField fx:id="usernameField" promptText="Enter username" />
    <Button fx:id="loginButton" text="Start" />
</VBox>