<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<!-- Favourites view.  Shows items marked as favourite by the current user. -->
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="transparent.controller.FavouritesController">
    <center>
        <TableView fx:id="favouritesTable">
            <columns>
                <TableColumn fx:id="colContent" text="Content ID" />
                <TableColumn fx:id="colAdded" text="Added" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <Button fx:id="backButton" text="Back" />
    </bottom>
</BorderPane>