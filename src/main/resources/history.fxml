<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<!-- History view.  Lists previously opened items along with their last
     access time and page number. -->
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="transparent.controller.HistoryController">
    <center>
        <TableView fx:id="historyTable">
            <columns>
                <TableColumn fx:id="colContent" text="Tiêu đề" prefWidth="280" />
                <TableColumn fx:id="colLastRead" text="Lần đọc gần nhất" prefWidth="180" />
                <TableColumn fx:id="colPage" text="Trang" prefWidth="80" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <Button fx:id="backButton" text="Đóng" />
    </bottom>
</BorderPane>